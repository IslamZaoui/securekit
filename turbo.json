{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "format": {},
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".svelte-kit/**",
                ".vercel/output/**",
                "build/**",
                "dist/**"
            ]
        }
    }
}

{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "format": {},
        "lint": {},
        "test": {
            "outputs": [".svelte-kit/**", ".vercel/output/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".svelte-kit/**",
                ".vercel/output/**",
                "build/**",
                "dist/**"
            ]
        }
    }
}

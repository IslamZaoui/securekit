{
    "name": "monorepo",
    "private": true,
    "scripts": {
        "dev": "bun --filter '*' dev",
        "build": "bun --filter '*' build",
        "lint": "bun --filter '*' lint",
        "format": "prettier --write \"**/*.{json,md}\" &&bun --filter '*' format"
